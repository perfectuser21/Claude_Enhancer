#!/bin/bash
# Claude Enhancer Auto-Mode Configuration v5.5.0
# 完全自动化配置文件

# ========================================
# 核心自动化设置
# ========================================

# 启用完全自动模式
export CE_AUTO_MODE=true

# 自动创建分支（无需确认）
export CE_AUTO_CREATE_BRANCH=true

# 自动选择默认选项
export CE_AUTO_SELECT_DEFAULT=true

# 自动确认所有操作（除了危险操作）
export CE_AUTO_CONFIRM=true

# ========================================
# UI优化设置
# ========================================

# 静默Agent选择（减少输出）
export CE_SILENT_AGENT_SELECTION=true

# 紧凑输出模式
export CE_COMPACT_OUTPUT=true

# 减少进度提示
export CE_MINIMAL_PROGRESS=true

# ========================================
# Git操作设置
# ========================================

# 自动提交（使用默认消息）
export CE_AUTO_COMMIT=false  # 保持false，让用户控制

# 自动推送（危险，默认关闭）
export CE_AUTO_PUSH=false

# 自动合并（危险，默认关闭）
export CE_AUTO_MERGE=false

# ========================================
# 安全设置
# ========================================

# 保留的确认操作（即使在自动模式下）
export CE_CONFIRM_DESTRUCTIVE=true  # rm -rf等危险操作
export CE_CONFIRM_PRODUCTION=true   # 生产环境操作
export CE_CONFIRM_FORCE_PUSH=true   # force push操作

# ========================================
# 日志设置
# ========================================

# 记录所有自动决策
export CE_LOG_AUTO_DECISIONS=true
export CE_AUTO_LOG_FILE="$HOME/.claude/logs/auto_decisions.log"

# ========================================
# 使用说明
# ========================================
# 1. 这个文件定义了Claude Enhancer的自动模式配置
# 2. 要启用：source ~/.claude/auto.config
# 3. 要禁用：unset CE_AUTO_MODE
# 4. 可以单独调整每个设置
# ========================================