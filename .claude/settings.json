{
  "version": "1.0.0",
  "project": "Claude Workflow",
  "description": "5-Phase workflow with Git integration",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "type": "command",
        "command": "bash .claude/hooks/enforce-multi-agent.sh",
        "description": "Ensure multiple agents are used"
      },
      {
        "matcher": "Task",
        "type": "command",
        "command": "bash .claude/hooks/context-manager.sh",
        "description": "Monitor context capacity"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "type": "command",
        "command": "python3 .claude/hooks/agent-output-collector.py",
        "description": "Collect and summarize agent outputs"
      },
      {
        "matcher": "Edit|Write",
        "type": "command",
        "command": "echo 'üìù Code modified - Remember to test before committing'",
        "description": "Quality reminder"
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash .claude/hooks/task-type-detector.sh",
        "description": "Analyze task type and suggest agents"
      }
    ],
    "SessionStart": [
      {
        "type": "command",
        "command": "echo 'üöÄ 5-Phase Workflow Active: Requirements ‚Üí Design ‚Üí Development ‚Üí Testing ‚Üí Deployment'",
        "description": "Workflow reminder"
      }
    ]
  },

  "environment": {
    "WORKFLOW_HOME": "/home/xx/dev/Perfect21",
    "MIN_AGENTS": "3",
    "WORKFLOW_PHASES": "5"
  }
}