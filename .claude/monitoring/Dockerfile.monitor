# =============================================================================
# Claude Enhancer Monitor Docker镜像
# =============================================================================

FROM python:3.11-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    curl \
    procps \
    htop \
    && rm -rf /var/lib/apt/lists/*

# 安装Python依赖
COPY requirements.monitor.txt .
RUN pip install --no-cache-dir -r requirements.monitor.txt

# 复制监控应用
COPY claude_enhancer_monitor.py .
COPY monitoring_config.yaml .

# 创建必要目录
RUN mkdir -p /app/.claude/logs /app/.claude/data

# 设置环境变量
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8091/health || exit 1

# 暴露端口
EXPOSE 8091 9091

# 启动监控应用
CMD ["python", "claude_enhancer_monitor.py"]