{
  "dashboard": {
    "id": null,
    "title": "Claude Enhancer 监控Dashboard",
    "tags": ["claude-enhancer", "monitoring", "hooks"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "5s",
    "schemaVersion": 16,
    "version": 1,
    "links": [],
    "panels": [
      {
        "id": 1,
        "title": "系统概览",
        "type": "stat",
        "targets": [
          {
            "expr": "claude_enhancer_hook_executions_total",
            "format": "time_series",
            "legendFormat": "Hook执行总数"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "pluginVersion": "8.0.0",
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 2,
        "title": "Hook执行成功率",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(claude_enhancer_hook_executions_total{status=\"success\"}[5m]) / rate(claude_enhancer_hook_executions_total[5m]) * 100",
            "format": "time_series",
            "legendFormat": "成功率"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 90
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            },
            "unit": "percent"
          },
          "overrides": []
        }
      },
      {
        "id": 3,
        "title": "Hook执行延迟",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(claude_enhancer_hook_duration_seconds_bucket[5m]))",
            "format": "time_series",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(claude_enhancer_hook_duration_seconds_bucket[5m]))",
            "format": "time_series",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(claude_enhancer_hook_duration_seconds_bucket[5m]))",
            "format": "time_series",
            "legendFormat": "P99"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "xAxis": {
          "buckets": null,
          "mode": "time",
          "name": null,
          "show": true,
          "values": []
        },
        "yAxes": [
          {
            "format": "s",
            "label": null,
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true
          },
          {
            "format": "short",
            "label": null,
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true
          }
        ],
        "yAxis": {
          "align": false,
          "alignLevel": null
        }
      },
      {
        "id": 4,
        "title": "Hook错误率",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(claude_enhancer_hook_errors_total[5m])",
            "format": "time_series",
            "legendFormat": "{{hook_name}} - {{error_type}}"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "format": "short",
            "label": "错误/秒",
            "logBase": 1,
            "max": null,
            "min": 0,
            "show": true
          },
          {
            "format": "short",
            "label": null,
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "model": {
                  "expr": "rate(claude_enhancer_hook_errors_total[5m])",
                  "format": "time_series",
                  "legendFormat": ""
                },
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "Hook错误率告警",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 5,
        "title": "系统CPU使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "claude_enhancer_cpu_usage_percent",
            "format": "time_series",
            "legendFormat": "CPU使用率"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 17
        },
        "yAxes": [
          {
            "format": "percent",
            "label": null,
            "logBase": 1,
            "max": 100,
            "min": 0,
            "show": true
          },
          {
            "format": "short",
            "label": null,
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true
          }
        ],
        "thresholds": [
          {
            "colorMode": "critical",
            "fill": true,
            "line": true,
            "op": "gt",
            "value": 80,
            "yaxis": "left"
          }
        ]
      },
      {
        "id": 6,
        "title": "系统内存使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "claude_enhancer_memory_usage_percent",
            "format": "time_series",
            "legendFormat": "内存使用率"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 17
        },
        "yAxes": [
          {
            "format": "percent",
            "label": null,
            "logBase": 1,
            "max": 100,
            "min": 0,
            "show": true
          },
          {
            "format": "short",
            "label": null,
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true
          }
        ],
        "thresholds": [
          {
            "colorMode": "critical",
            "fill": true,
            "line": true,
            "op": "gt",
            "value": 85,
            "yaxis": "left"
          }
        ]
      },
      {
        "id": 7,
        "title": "系统磁盘使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "claude_enhancer_disk_usage_percent",
            "format": "time_series",
            "legendFormat": "磁盘使用率"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 17
        },
        "yAxes": [
          {
            "format": "percent",
            "label": null,
            "logBase": 1,
            "max": 100,
            "min": 0,
            "show": true
          },
          {
            "format": "short",
            "label": null,
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true
          }
        ],
        "thresholds": [
          {
            "colorMode": "critical",
            "fill": true,
            "line": true,
            "op": "gt",
            "value": 80,
            "yaxis": "left"
          }
        ]
      },
      {
        "id": 8,
        "title": "Hook执行量 (按Hook)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(claude_enhancer_hook_executions_total[5m])",
            "format": "time_series",
            "legendFormat": "{{hook_name}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 25
        },
        "yAxes": [
          {
            "format": "ops",
            "label": "执行/秒",
            "logBase": 1,
            "max": null,
            "min": 0,
            "show": true
          },
          {
            "format": "short",
            "label": null,
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true
          }
        ]
      },
      {
        "id": 9,
        "title": "Hook延迟分布 (按Hook)",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(claude_enhancer_hook_duration_seconds_bucket[5m])",
            "format": "heatmap",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 25
        },
        "heatmap": {
          "cardColor": "#b4ff00",
          "cardPadding": null,
          "cardRound": null,
          "colorScale": "sqrt",
          "colorScheme": "interpolateOranges",
          "exponent": 0.5,
          "gridColor": "#b4ff00",
          "hideZeroBuckets": false,
          "highlightCards": true,
          "maxDataPoints": 25,
          "minColor": "#b4ff00",
          "reverseYBuckets": false,
          "tooltip": {
            "show": true,
            "showHistogram": false
          },
          "xAxis": {
            "show": true
          },
          "yAxis": {
            "decimals": null,
            "format": "s",
            "logBase": 1,
            "max": null,
            "min": null,
            "show": true,
            "splitFactor": null
          },
          "yBucketBound": "auto",
          "yBucketNumber": null,
          "yBucketSize": null
        }
      },
      {
        "id": 10,
        "title": "活跃Hook数量",
        "type": "stat",
        "targets": [
          {
            "expr": "claude_enhancer_active_hooks",
            "format": "time_series",
            "legendFormat": "活跃Hook"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 33
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 11,
        "title": "队列大小",
        "type": "stat",
        "targets": [
          {
            "expr": "claude_enhancer_queue_size",
            "format": "time_series",
            "legendFormat": "队列大小"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 33
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 12,
        "title": "最近告警",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"claude-enhancer\"} |= \"WARNING|ERROR|CRITICAL\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 33
        },
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "allValue": null,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "datasource": "Prometheus",
          "definition": "label_values(claude_enhancer_hook_executions_total, hook_name)",
          "hide": 0,
          "includeAll": true,
          "label": null,
          "multi": false,
          "name": "hook",
          "options": [],
          "query": "label_values(claude_enhancer_hook_executions_total, hook_name)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "tagValuesQuery": "",
          "tags": [],
          "tagsQuery": "",
          "type": "query",
          "useTags": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    }
  },
  "overwrite": false
}