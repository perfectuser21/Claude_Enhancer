{
  "version": "3.0.0",
  "project": "Claude Enhancer - Complete Workflow",
  "description": "Full 6-stage workflow for maximum quality",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "type": "command",
        "command": "bash .claude/hooks/workflow_manager.sh",
        "description": "Complete workflow manager - tracks all 6 stages",
        "timeout": 10000
      },
      {
        "matcher": "Task",
        "type": "command",
        "command": "bash .claude/hooks/parallel-validators.sh",
        "description": "Validate minimum agents and parallel execution",
        "timeout": 5000
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "type": "command",
        "command": "python3 .claude/hooks/agent-output-collector.py",
        "description": "Collect and summarize all agent outputs",
        "timeout": 15000
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "type": "command",
        "command": "bash .claude/hooks/quality-gates.sh",
        "description": "Quality gates check after code changes",
        "timeout": 3000
      },
      {
        "matcher": "Bash",
        "type": "command",
        "command": "bash -c 'if echo \"$CLAUDE_INPUT\" | grep -q \"git commit\"; then bash .claude/hooks/git-bridge.sh; fi'",
        "description": "Git guidance when committing",
        "timeout": 3000
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash .claude/hooks/parallel-analyzers.sh",
        "description": "Analyze task and suggest agents",
        "timeout": 5000
      }
    ],
    "SessionStart": [
      {
        "type": "command",
        "command": "echo 'üéØ Complete 6-Stage Workflow Active\\n1Ô∏è‚É£ Planning ‚Üí 2Ô∏è‚É£ Agent Selection ‚Üí 3Ô∏è‚É£ Execution\\n4Ô∏è‚É£ Quality Check ‚Üí 5Ô∏è‚É£ Git Commit ‚Üí 6Ô∏è‚É£ Deployment\\n\\n‚ú® Every task will go through all quality stages for best results!'",
        "description": "Workflow overview"
      }
    ]
  },
  "environment": {
    "MIN_AGENTS": "5",
    "QUALITY_MODE": "true",
    "WORKFLOW_STAGES": "6",
    "SKIP_STAGES": "false"
  }
}