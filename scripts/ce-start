#!/bin/bash
# ce start - æ¿€æ´»å·¥ä½œæµï¼Œç”ŸæˆACTIVEæ–‡ä»¶
# Usage: ce start "ä»»åŠ¡æè¿°"

set -euo pipefail

# é¢œè‰²è¾“å‡º
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# æ£€æŸ¥å‚æ•°
if [ $# -eq 0 ]; then
    echo -e "${RED}âŒ é”™è¯¯ï¼šè¯·æä¾›ä»»åŠ¡æè¿°${NC}"
    echo "ç”¨æ³•: ce start \"ä»»åŠ¡æè¿°\""
    exit 1
fi

TASK_DESC="$1"

# èŽ·å–gitä»“åº“æ ¹ç›®å½•
if ! GIT_ROOT=$(git rev-parse --show-toplevel 2>/dev/null); then
    echo -e "${RED}âŒ é”™è¯¯ï¼šä¸åœ¨gitä»“åº“å†…${NC}"
    exit 1
fi

cd "$GIT_ROOT"

# èŽ·å–å½“å‰åˆ†æ”¯
CURRENT_BRANCH=$(git branch --show-current)

# æ£€æŸ¥æ˜¯å¦åœ¨mainåˆ†æ”¯
if [ "$CURRENT_BRANCH" = "main" ] || [ "$CURRENT_BRANCH" = "master" ]; then
    echo -e "${RED}âŒ é”™è¯¯ï¼šä¸èƒ½åœ¨ä¸»åˆ†æ”¯æ¿€æ´»å·¥ä½œæµ${NC}"
    echo -e "${YELLOW}ðŸ’¡ æç¤ºï¼šè¯·å…ˆåˆ›å»ºfeatureåˆ†æ”¯${NC}"
    echo "   git checkout -b feature/your-feature-name"
    exit 1
fi

# èŽ·å–ç”¨æˆ·ä¿¡æ¯
GIT_USER=$(git config user.name || echo "unknown")
TIMESTAMP=$(date '+%Y%m%d-%H%M%S')
DATE=$(date '+%Y%m%d')

# ç”Ÿæˆticket ID
TICKET_SEQ=1
if [ -d ".workflow/archive" ]; then
    # æŸ¥æ‰¾ä»Šæ—¥æœ€å¤§åºå·
    MAX_SEQ=$(ls .workflow/archive/ACTIVE-*.txt 2>/dev/null | \
              grep "T-${DATE}" | \
              sed -E "s/.*T-${DATE}-([0-9]+).*/\1/" | \
              sort -n | tail -1 || echo 0)
    TICKET_SEQ=$((MAX_SEQ + 1))
fi
TICKET_ID="T-${DATE}-$(printf "%03d" $TICKET_SEQ)"

# åˆ›å»º.workflowç›®å½•
mkdir -p .workflow

# æ£€æŸ¥æ˜¯å¦å·²æœ‰ACTIVEæ–‡ä»¶
if [ -f ".workflow/ACTIVE" ]; then
    echo -e "${YELLOW}âš ï¸  å·²å­˜åœ¨æ¿€æ´»çš„å·¥ä½œæµï¼Œæ›´æ–°ä¸­...${NC}"
    # è¯»å–åŽŸæœ‰ticketï¼ˆä¿æŒä¸å˜ï¼‰
    EXISTING_TICKET=$(grep "^ticket=" .workflow/ACTIVE | cut -d= -f2 || echo "")
    if [ -n "$EXISTING_TICKET" ]; then
        TICKET_ID="$EXISTING_TICKET"
    fi
fi

# ç”Ÿæˆ/æ›´æ–°ACTIVEæ–‡ä»¶
cat > .workflow/ACTIVE << EOF
ticket=${TICKET_ID}
phase=P1
branch=${CURRENT_BRANCH}
owner=${GIT_USER}
created_at=$(date '+%Y-%m-%d %H:%M:%S')
ttl_hours=8
note=${TASK_DESC}
EOF

echo -e "${GREEN}âœ… å·¥ä½œæµå·²æ¿€æ´»ï¼${NC}"
echo -e "ðŸ“‹ Ticket: ${TICKET_ID}"
echo -e "ðŸŒ¿ åˆ†æ”¯: ${CURRENT_BRANCH}"
echo -e "ðŸ‘¤ è´Ÿè´£äºº: ${GIT_USER}"
echo -e "ðŸ“ ä»»åŠ¡: ${TASK_DESC}"
echo ""
echo -e "${GREEN}çŽ°åœ¨ä½ å¯ä»¥ï¼š${NC}"
echo "  1. æ­£å¸¸å¼€å‘å¹¶git add/commit"
echo "  2. git push æŽ¨é€åˆ°è¿œç¨‹"
echo "  3. åˆ›å»ºPRå¹¶åˆå¹¶"
echo "  4. å®ŒæˆåŽè¿è¡Œ: ce stop"