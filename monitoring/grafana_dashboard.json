{
  "dashboard": {
    "id": null,
    "title": "Claude Enhancer 5.1 - 企业级监控仪表板",
    "tags": ["claude-enhancer", "authentication", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "系统状态概览",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"claude-enhancer.*\"}",
            "legendFormat": "{{ job }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {"text": "Down", "color": "red"},
                  "1": {"text": "Up", "color": "green"}
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "请求速率 (RPS)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(auth_requests_total[5m])) by (service)",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "错误率",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(auth_requests_total{status=~\"5..\"}[5m])) by (service) / sum(rate(auth_requests_total[5m])) by (service)",
            "legendFormat": "{{ service }} Error Rate",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate",
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        ],
        "thresholds": [
          {"value": 0.01, "colorMode": "critical", "op": "gt"},
          {"value": 0.05, "colorMode": "critical", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "响应时间 (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(auth_response_time_bucket[5m])) by (le, service))",
            "legendFormat": "{{ service }} P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(auth_response_time_bucket[5m])) by (le, service))",
            "legendFormat": "{{ service }} P50",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0,
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "CPU使用率",
        "type": "gauge",
        "targets": [
          {
            "expr": "claude_enhancer_cpu_usage",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 4, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "内存使用率",
        "type": "gauge",
        "targets": [
          {
            "expr": "claude_enhancer_memory_usage",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 75},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 4, "x": 4, "y": 8}
      },
      {
        "id": 7,
        "title": "磁盘使用率",
        "type": "gauge",
        "targets": [
          {
            "expr": "claude_enhancer_disk_usage",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 4, "x": 8, "y": 8}
      },
      {
        "id": 8,
        "title": "数据库连接数",
        "type": "graph",
        "targets": [
          {
            "expr": "database_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "database_pool_size",
            "legendFormat": "Pool Size",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8}
      },
      {
        "id": 9,
        "title": "缓存性能",
        "type": "graph",
        "targets": [
          {
            "expr": "cache_hit_ratio * 100",
            "legendFormat": "Hit Rate (%)",
            "refId": "A"
          },
          {
            "expr": "rate(cache_gets_total[5m])",
            "legendFormat": "Gets/sec",
            "refId": "B",
            "yAxis": 2
          },
          {
            "expr": "rate(cache_sets_total[5m])",
            "legendFormat": "Sets/sec",
            "refId": "C",
            "yAxis": 2
          }
        ],
        "yAxes": [
          {
            "label": "Hit Rate (%)",
            "min": 0,
            "max": 100
          },
          {
            "label": "Operations/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8}
      },
      {
        "id": 10,
        "title": "认证指标",
        "type": "graph",
        "targets": [
          {
            "expr": "user_sessions_active",
            "legendFormat": "Active Sessions",
            "refId": "A"
          },
          {
            "expr": "rate(user_registrations_total[5m]) * 60",
            "legendFormat": "Registrations/min",
            "refId": "B",
            "yAxis": 2
          },
          {
            "expr": "mfa_success_rate * 100",
            "legendFormat": "MFA Success Rate (%)",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Sessions / Success Rate (%)",
            "min": 0
          },
          {
            "label": "Registrations/min",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 11,
        "title": "队列状态",
        "type": "graph",
        "targets": [
          {
            "expr": "queue_size",
            "legendFormat": "Queue Size",
            "refId": "A"
          },
          {
            "expr": "active_workers",
            "legendFormat": "Active Workers",
            "refId": "B"
          },
          {
            "expr": "rate(completed_tasks[5m]) * 60",
            "legendFormat": "Completed Tasks/min",
            "refId": "C",
            "yAxis": 2
          }
        ],
        "yAxes": [
          {
            "label": "Count",
            "min": 0
          },
          {
            "label": "Tasks/min",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 12,
        "title": "网络流量",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(network_bytes_sent[5m]) * 8",
            "legendFormat": "Sent (bps)",
            "refId": "A"
          },
          {
            "expr": "rate(network_bytes_recv[5m]) * 8",
            "legendFormat": "Received (bps)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bits per second",
            "min": 0,
            "unit": "bps"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 13,
        "title": "JVM/进程指标",
        "type": "graph",
        "targets": [
          {
            "expr": "process_memory_rss / 1024 / 1024",
            "legendFormat": "RSS Memory (MB)",
            "refId": "A"
          },
          {
            "expr": "process_cpu_percent",
            "legendFormat": "CPU %",
            "refId": "B",
            "yAxis": 2
          },
          {
            "expr": "process_threads",
            "legendFormat": "Thread Count",
            "refId": "C",
            "yAxis": 2
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          },
          {
            "label": "CPU % / Threads",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 14,
        "title": "安全指标",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(auth_requests_total{status=\"401\"}[5m]) * 60",
            "legendFormat": "Auth Failures/min",
            "refId": "A"
          },
          {
            "expr": "rate(auth_requests_total{status=\"403\"}[5m]) * 60",
            "legendFormat": "Forbidden/min",
            "refId": "B"
          },
          {
            "expr": "avg(password_strength_score)",
            "legendFormat": "Avg Password Strength",
            "refId": "C",
            "yAxis": 2
          }
        ],
        "yAxes": [
          {
            "label": "Failures/min",
            "min": 0
          },
          {
            "label": "Password Strength",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24}
      },
      {
        "id": 15,
        "title": "SLA合规性",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(up{job=~\"claude-enhancer.*\"}) / count(up{job=~\"claude-enhancer.*\"}) * 100",
            "legendFormat": "Availability %",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(auth_response_time_bucket[5m]))) * 1000",
            "legendFormat": "P95 Response Time (ms)",
            "refId": "B"
          },
          {
            "expr": "(sum(rate(auth_requests_total{status=~\"5..\"}[5m])) / sum(rate(auth_requests_total[5m]))) * 100",
            "legendFormat": "Error Rate %",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "P95 Response Time (ms)"},
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": 0},
                      {"color": "yellow", "value": 200},
                      {"color": "red", "value": 1000}
                    ]
                  }
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Error Rate %"},
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": 0},
                      {"color": "yellow", "value": 1},
                      {"color": "red", "value": 5}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      },
      {
        "id": 16,
        "title": "告警状态",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"alertmanager\"} |= \"firing\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40}
      },
      {
        "id": 17,
        "title": "热力图 - 响应时间分布",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(auth_response_time_bucket[5m])) by (le)",
            "legendFormat": "{{ le }}",
            "refId": "A"
          }
        ],
        "heatmap": {
          "xBucketSize": null,
          "yBucketSize": null,
          "xBucketNumber": null,
          "yBucketNumber": null
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 48}
      },
      {
        "id": 18,
        "title": "业务趋势",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(user_registrations_total[1h])",
            "legendFormat": "Hourly Registrations",
            "refId": "A"
          },
          {
            "expr": "increase(auth_requests_total{status=~\"2..\"}[1h])",
            "legendFormat": "Successful Auth/hour",
            "refId": "B"
          },
          {
            "expr": "avg_over_time(user_sessions_active[1h])",
            "legendFormat": "Avg Active Sessions",
            "refId": "C",
            "yAxis": 2
          }
        ],
        "yAxes": [
          {
            "label": "Count/hour",
            "min": 0
          },
          {
            "label": "Average Sessions",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 48}
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "30s",
    "version": 1,
    "uid": "claude-enhancer-5.1"
  }
}