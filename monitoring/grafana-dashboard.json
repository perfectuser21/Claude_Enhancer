{
  "dashboard": {
    "id": null,
    "title": "Perfect21 监控仪表板",
    "tags": ["perfect21", "api", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API服务状态",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"perfect21-api\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "API请求率",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"perfect21-api\"}[5m])",
            "refId": "A",
            "legendFormat": "请求/秒"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "响应时间分布",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"perfect21-api\"}[5m]))",
            "refId": "A",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"perfect21-api\"}[5m]))",
            "refId": "B",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"perfect21-api\"}[5m]))",
            "refId": "C",
            "legendFormat": "P99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "系统资源使用",
        "type": "graph",
        "targets": [
          {
            "expr": "system_cpu_percent{job=\"perfect21-api\"}",
            "refId": "A",
            "legendFormat": "CPU %"
          },
          {
            "expr": "system_memory_percent{job=\"perfect21-api\"}",
            "refId": "B",
            "legendFormat": "内存 %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Agent执行统计",
        "type": "table",
        "targets": [
          {
            "expr": "agent_executions_total",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Git工作流指标",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(git_hook_executions_total[5m])",
            "refId": "A",
            "legendFormat": "Hook执行/分钟"
          },
          {
            "expr": "rate(git_hook_executions_failed_total[5m])",
            "refId": "B",
            "legendFormat": "Hook失败/分钟"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "错误率",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"perfect21-api\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"perfect21-api\"}[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 8,
        "title": "数据库连接",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "refId": "A",
            "legendFormat": "活跃连接数"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}