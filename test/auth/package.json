{
  "name": "perfect21-auth-tests",
  "version": "1.0.0",
  "description": "Perfect21框架认证系统测试套件",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "./scripts/test.sh",
    "test:unit": "jest test/auth/unit --testPathPattern=unit",
    "test:integration": "jest test/auth/integration --testPathPattern=integration",
    "test:e2e": "playwright test test/auth/e2e",
    "test:security": "jest test/auth/security --testPathPattern=security",
    "test:performance": "jest test/auth/performance --testPathPattern=performance",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:report": "node scripts/generate-report.js",
    "lint": "eslint test/ --ext .js,.json",
    "lint:fix": "eslint test/ --ext .js,.json --fix",
    "setup:test-db": "node scripts/setup-test-db.js",
    "cleanup:test-data": "node scripts/cleanup-test-data.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "autocannon": "^7.12.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0",
    "supertest": "^6.3.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.5.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.0",
    "dotenv": "^16.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js",
      "**/test/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/auth/**/*.js",
      "!src/auth/tests/**",
      "!src/auth/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testTimeout": 10000,
    "maxWorkers": "50%"
  },
  "keywords": [
    "authentication",
    "testing",
    "perfect21",
    "security",
    "jwt",
    "express"
  ],
  "author": "Perfect21 Team",
  "license": "MIT"
}