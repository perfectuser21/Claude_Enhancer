# =============================================================================
# Development Environment Configuration for Perfect21 Claude Enhancer
# Safe defaults for local development
# =============================================================================

# Application Settings
CLAUDE_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=development-secret-key-not-for-production
API_VERSION=v1
DOMAIN=localhost

# Database Configuration (Development)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=claude_enhancer_dev
DB_USER=claude_user_dev
DB_PASSWORD=dev-password-123
DATABASE_URL=postgresql+asyncpg://claude_user_dev:dev-password-123@postgres:5432/claude_enhancer_dev

# Redis Configuration (Development)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev-redis-password
REDIS_URL=redis://:dev-redis-password@redis:6379/0

# JWT Configuration (Development)
JWT_ACCESS_SECRET=development-jwt-access-secret-for-testing-only
JWT_REFRESH_SECRET=development-jwt-refresh-secret-for-testing-only
JWT_ACCESS_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30

# Email Configuration (Development - using MailHog or similar)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=dev@claude-enhancer.local

# External APIs (Development - use test keys)
OPENAI_API_KEY=sk-test-key-for-development
ANTHROPIC_API_KEY=test-key-for-development

# Monitoring & Observability (Development)
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin123
SENTRY_DSN=
DATADOG_API_KEY=

# Security Settings (Development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Upload Settings (Development)
MAX_UPLOAD_SIZE=52428800  # 50MB for development
UPLOAD_PATH=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,md,py,js,ts,json,yaml,yml

# Cache Settings (Development)
CACHE_TTL=300  # 5 minutes for development
CACHE_MAX_SIZE=1000

# Feature Flags (Development)
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR=false
ENABLE_ANALYTICS=false

# Development Tools
PGADMIN_PASSWORD=admin123
REDIS_COMMANDER_PASSWORD=admin123

# Performance Settings (Development)
WORKERS=1
MAX_CONNECTIONS=50
POOL_SIZE=5
MAX_OVERFLOW=10

# Health Check Configuration (Development)
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=2

# Logging Configuration (Development)
LOG_FORMAT=text
LOG_FILE=/app/logs/dev.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=3

# Build Information (for Docker)
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=development
VERSION=1.0.0-dev

# Development-specific settings
HOT_RELOAD=true
AUTO_RELOAD=true
TESTING_MODE=true
MOCK_EXTERNAL_APIS=true