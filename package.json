{
  "name": "claude-enhancer",
  "version": "7.0.0",
  "description": "Claude Enhancer 7.0.0 - 专业级个人AI编程工作流系统 (7 Phases + Learning System)",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "coverage": "npm run test:coverage && npm run coverage:report",
    "coverage:report": "open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html || echo 'Open coverage/lcov-report/index.html manually'",
    "coverage:check": "bash scripts/coverage_check.sh",
    "coverage:verify": "bash scripts/verify_coverage_local.sh",
    "bdd": "cucumber-js --publish-quiet",
    "bdd:ci": "cucumber-js --format progress --publish-quiet",
    "bdd:report": "cucumber-js --format json:test/reports/cucumber_report.json",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "validate": "bash test/validate_enhancement.sh",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "tsc",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run coverage:verify"
  },
  "keywords": [
    "claude",
    "enhancer",
    "ai",
    "programming",
    "assistant",
    "workflow",
    "bdd",
    "slo"
  ],
  "author": "Claude Enhancer Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@types/chai": "^4.3.11",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "axios": "^1.12.2",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claude-enhancer/claude-enhancer.git"
  },
  "bugs": {
    "url": "https://github.com/claude-enhancer/claude-enhancer/issues"
  },
  "homepage": "https://github.com/claude-enhancer/claude-enhancer#readme",
  "cucumber": {
    "default": {
      "paths": [
        "acceptance/features"
      ],
      "require": [
        "acceptance/steps/**/*.js"
      ],
      "format": [
        "progress-bar",
        "html:test/reports/cucumber.html"
      ],
      "publishQuiet": true
    }
  }
}
