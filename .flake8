# Flake8 Configuration for Claude Enhancer v5.4.0
# Purpose: Python linting configuration

[flake8]
# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 10

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .tox

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # E501: line too long (handled by max-line-length)
    # E501,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E402: module level import not at top of file (sometimes needed)
    # E402

# Select specific errors to check
select = E,W,F,C,N

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    test_*.py:E501

# Show source code for each error
show-source = True

# Show PEP8 violation statistics
statistics = True

# Count errors
count = True
