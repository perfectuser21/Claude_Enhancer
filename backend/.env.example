# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=perfect21

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# 异步连接池配置
DB_ASYNC_POOL_SIZE=20
DB_ASYNC_MAX_OVERFLOW=30

# 数据库SSL配置
DB_SSL_MODE=prefer
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_CA=/path/to/ca-cert.pem

# 查询配置
DB_ECHO=false
DB_ECHO_POOL=false
DB_QUERY_TIMEOUT=30

# 重试配置
DB_MAX_RETRIES=3
DB_RETRY_INTERVAL=1.0

# Redis缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Redis集群配置
REDIS_CLUSTER_ENABLED=false
# REDIS_CLUSTER_NODES=host1:port1,host2:port2,host3:port3

# Redis连接池配置
REDIS_MAX_CONNECTIONS=100
REDIS_MAX_CONNECTIONS_PER_NODE=50

# Redis超时配置
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=5.0
REDIS_SOCKET_KEEPALIVE=true
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Redis SSL配置
REDIS_SSL_ENABLED=false
REDIS_SSL_CERT_REQS=required
# REDIS_SSL_CA_CERTS=/path/to/ca-cert.pem
# REDIS_SSL_CERTFILE=/path/to/client-cert.pem
# REDIS_SSL_KEYFILE=/path/to/client-key.pem

# Redis序列化配置
REDIS_SERIALIZER=json
REDIS_COMPRESSION=false

# Redis TTL配置 (秒)
REDIS_DEFAULT_TTL=3600
REDIS_SESSION_TTL=86400
REDIS_USER_TTL=1800

# 应用配置
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# 安全配置
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100  # 每分钟请求数

# 监控配置
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health