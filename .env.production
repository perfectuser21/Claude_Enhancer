# =============================================================================
# Production Environment Configuration for Perfect21 Claude Enhancer
# SECURITY WARNING: Use strong passwords and rotate secrets regularly
# =============================================================================

# Application Settings
CLAUDE_ENV=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-256-BITS-MINIMUM
API_VERSION=v1
DOMAIN=your-domain.com

# Database Configuration (Production)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=claude_enhancer_prod
DB_USER=claude_user_prod
DB_PASSWORD=CHANGE-THIS-TO-A-STRONG-DATABASE-PASSWORD
DATABASE_URL=postgresql+asyncpg://claude_user_prod:CHANGE-THIS-TO-A-STRONG-DATABASE-PASSWORD@postgres:5432/claude_enhancer_prod

# Redis Configuration (Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE-THIS-TO-A-STRONG-REDIS-PASSWORD
REDIS_URL=redis://:CHANGE-THIS-TO-A-STRONG-REDIS-PASSWORD@redis:6379/0

# JWT Configuration (Production)
JWT_ACCESS_SECRET=CHANGE-THIS-TO-A-STRONG-JWT-ACCESS-SECRET-MINIMUM-256-BITS
JWT_REFRESH_SECRET=CHANGE-THIS-TO-A-DIFFERENT-STRONG-JWT-REFRESH-SECRET-MINIMUM-256-BITS
JWT_ACCESS_EXPIRE_MINUTES=15
JWT_REFRESH_EXPIRE_DAYS=7

# Email Configuration (Production)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# External APIs (Production)
OPENAI_API_KEY=your-production-openai-api-key
ANTHROPIC_API_KEY=your-production-anthropic-api-key

# Monitoring & Observability (Production)
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=CHANGE-THIS-TO-A-STRONG-GRAFANA-PASSWORD
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-production-datadog-api-key

# Security Settings (Production)
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com
ALLOWED_HOSTS=your-domain.com,api.your-domain.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60

# File Upload Settings (Production)
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,md

# Cache Settings (Production)
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Feature Flags (Production)
ENABLE_REGISTRATION=false  # Disable in production unless needed
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR=true
ENABLE_ANALYTICS=true

# Production Deployment
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/your-domain.crt
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/your-domain.key

# Performance Settings
WORKERS=4
MAX_CONNECTIONS=200
POOL_SIZE=20
MAX_OVERFLOW=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Build Information (for Docker)
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=main
VERSION=1.0.0